
@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var listNewProducts = (List<Model.EF.SanPham>)ViewBag.NewProducts;
    var listFeatureProducts = (List<Model.EF.SanPham>)ViewBag.ListFeatureProducts;
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <!-- Carousel -->
            <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators hidden-xs">
                    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                </ol>
                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="/Assets/client/images/main-banner1-1903x600.jpg" alt="First slide">
                        <!-- Static Header -->
                        <div class="header-text hidden-xs">
                            <div class="col-md-12 text-center">
                            </div>
                        </div><!-- /header-text -->
                    </div>
                    <div class="item">
                        <img src="/Assets/client/images/main-banner2-1903x600.jpg" alt="Second slide">
                        <!-- Static Header -->
                        <div class="header-text hidden-xs">
                            <div class="col-md-12 text-center">
                            </div>
                        </div><!-- /header-text -->
                    </div>
                    <div class="item">
                        <img src="/Assets/client/images/main-banner3-1903x600.jpg" alt="Third slide">
                        <!-- Static Header -->
                        <div class="header-text hidden-xs">
                            <div class="col-md-12 text-center">
                            </div>
                        </div><!-- /header-text -->
                    </div>
                </div>
                <!-- Controls -->
                <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                </a>
                <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                </a>
            </div><!-- /carousel -->
        </div>
    </div>
    <div class="row">
        <div class="banner">
            <div class="col-sm-4">
                <img src="/Assets/client/images/sub-banner1.png" />
            </div>
            <div class="col-sm-4">
                <img src="/Assets/client/images/sub-banner2.png" />
            </div>
            <div class="col-sm-4">
                <img src="/Assets/client/images/sub-banner3.png" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="heading"><h2>Sản phẩm mới</h2></div>
            <div class="products">
                @foreach (var item in listNewProducts)
                {
                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                        <div class="product">
                            <div class="image"><a href="~/Product/Detail/@item.MaSach"><img src="@item.HinhAnh" alt="@item.TenSach" /></a></div>
                            <div class="buttons">
                                <a class="btn cart" href="/Cart/AddItem/@item.MaSach?productId=@item.MaSach&quantity=1"><span class="glyphicon glyphicon-shopping-cart"></span></a>
                                <a class="btn wishlist" href="#"><span class="glyphicon glyphicon-heart"></span></a>
                                <a class="btn compare" href="#"><span class="glyphicon glyphicon-transfer"></span></a>
                            </div>
                            <div class="caption">
                                <div class="name" style=" height:50px"><h3><a href="product.html">@item.TenSach</a></h3></div>
                                <div class="price">@item.DonGia<span>@(item.DonGia-20000)</span></div>
                                <div class="rating"><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star-empty"></span><span class="glyphicon glyphicon-star-empty"></span></div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="row">
        <div class="banner">
            <div class="col-sm-6">
                <img src="/Assets/client/images/sub-banner4.jpg" />
            </div>
            <div class="col-sm-6">
                <img src="/Assets/client/images/sub-banner5.png" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="heading"><h2>Sản phẩm nổi bật</h2></div>
            <div class="products">
                @foreach (var item in listFeatureProducts)
                {
                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                        <div class="product">
                            <div class="image"><a href="~/Product/Detail/@item.MaSach"><img src="@item.HinhAnh" alt="@item.TenSach" /></a></div>
                            <div class="buttons">
                                <a class="btn cart"  href="/Cart/AddItem/@item.MaSach?productId=@item.MaSach&quantity=1"><span class="glyphicon glyphicon-shopping-cart"></span></a>
                                <a class="btn wishlist" href="#"><span class="glyphicon glyphicon-heart"></span></a>
                                <a class="btn compare" href="#"><span class="glyphicon glyphicon-transfer"></span></a>
                            </div>
                            <div class="caption">
                                <div class="name" style=" height:50px"><h3><a href="product.html">@item.TenSach</a></h3></div>
                                <div class="price">@item.DonGia<span>@(item.DonGia-20000)</span></div>
                                <div class="rating"><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star-empty"></span><span class="glyphicon glyphicon-star-empty"></span></div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

