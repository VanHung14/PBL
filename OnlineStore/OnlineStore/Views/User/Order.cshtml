@model PagedList.IPagedList<Model.EF.DonHang>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Mã đơn hàng</th>
                            <th>Mã người mua</th>
                            <th>Tên người mua</th>
                            <th>SĐT</th>
                            <th>Email</th>
                            <th>Địa chỉ</th>
                            <th>Ghi chú</th>
                            <th>Ngày đặt</th>
                            <th>Tổng tiền</th>
                            <th>Trạng thái</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="row_@item.MaDonHang">
                                <th>
                                    @item.MaDonHang
                                    <a href="/User/Detail/@item.MaDonHang">Xem</a>
                                    @*<a href="/Admin/Order/Edit/@item.MaDonHang">Sửa</a>*@
                                    |
                                    @if (item.TrangThai == "Chưa xác nhận")
                                    {
                                        
                                        @Ajax.ActionLink("Xóa", "Delete", new { @id = item.MaDonHang }, new AjaxOptions
                               {
                                   Confirm = "Bạn có muốn xóa bản ghi này?",
                                   OnComplete = "$('#row_" + @item.MaDonHang + "').remove()",
                                   HttpMethod = "Delete"
                               })
                                    }
                                </th>
                                <th>@item.IdUser</th>
                                <th>@item.TenNguoiNhan</th>
                                <th>@item.SDTNguoiNhan</th>
                                <th>@item.Email</th>
                                <th>@item.DiaChiNhan</th>
                                <th>@item.GhiChu</th>
                                <th>@item.NgayTao</th>
                                <th>@item.TongTien</th>
                                <th>@item.TrangThai</th>
                            </tr>
                        }
                    </tbody>
                </table>
                @*@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))*@
            </div>
        </div>
    </div>
</div>
