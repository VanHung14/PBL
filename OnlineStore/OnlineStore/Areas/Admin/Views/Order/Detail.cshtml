@model List<Model.EF.ChiTietShow>
@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}
@section header{
    Chi tiết đơn hàng
}
<div class="row">
    <div class="col-lg-12">
        <div class="card-body">

            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Mã sách</th>
                            <th>Tên sách</th>
                            <th>Hình ảnh</th>
                            <th>Số lượng</th>
                            <th>Đơn giá</th>
                            <th>Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>
                                    @item.MaSach
                                </th>
                                <th>@item.TenSach</th>
                                <th><img src="@item.HinhAnh" alt="@item.TenSach" /></th>
                                <th>@item.SoLuong</th>
                                <th>@item.DonGia</th>
                                <th>@item.ThanhTien</th>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


