@model PagedList.IPagedList<Model.EF.GopY_KH>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Quản lý feedback";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section header{
    Danh sách góp ý
}
<div class="row">
    <div class="col-lg-12">
        <div class="card-body">

            <div class="table-responsive">
                <table class="table table-bordered"  width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Mã góp ý</th>
                            <th>Mã người góp ý</th>
                            <th>Nội dung</th>
                            <th>Ngày tạo</th>
                            <th>Trạng thái</th>
                            <th>Chỉnh sửa</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="row_@item.IdGopY">
                                <th>
                                    @item.IdGopY
                                    
                                </th>
                                <th>@item.IdUser</th>
                                <th>@item.NoiDung</th>
                                <th>@item.NgayTao</th>
                                <th>@item.TrangThai</th>
                                <th>
                                    <a href="/Admin/Feedback/Edit/@item.IdGopY">Sửa</a>
                                    |
                                    @Ajax.ActionLink("Xóa", "Delete", new { @id = item.IdGopY }, new AjaxOptions
                               {
                                   Confirm = "Bạn có muốn xóa bản ghi này?",
                                   OnComplete = "$('#row_" + @item.IdGopY + "').remove()",
                                   HttpMethod = "Delete"
                               })
                                </th>
                            </tr>
                        }
                    </tbody>
                </table>
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
            </div>
        </div>
    </div>
</div>
