@model PagedList.IPagedList<Model.EF.User>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Quản lý người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section header{
    Danh sách người dùng
}
@using (Html.BeginForm("Sort", "User", FormMethod.Post))
{
    <label>Sắp xếp theo</label>
    <select name="chuoi">
        <option value="hoten"> Họ tên </option>
        <option value="username"> UserName </option>
        <option value="gioitinh"> Giới tính </option>
        <option value="ngaytao"> Ngày tạo </option>
        <option value="trangthai"> Trạng thái </option>
    </select>
    <button type="submit" class="btn btn-2 ">Sắp xếp</button>
}
<div class="row">

    <div class="col-lg-12">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>UserName</th>
                            <th>PassWord</th>
                            <th>Họ tên</th>
                            <th>Giới tính</th>
                            <th>Địa chỉ</th>
                            <th>Điện thoại</th>
                            <th>Email</th>
                            <th>Ngày tạo</th>
                            <th>Trạng thái</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="row_@item.IdUser">
                                <th>
                                    @item.UserName
                                    <a href="/Admin/User/Edit/@item.IdUser">Sửa</a>
                                    |
                                    @Ajax.ActionLink("Xóa", "Delete", new { @id = item.IdUser }, new AjaxOptions
                               {
                                   Confirm = "Bạn có muốn xóa bản ghi này?",
                                   OnComplete = "$('#row_" + @item.IdUser + "').remove()",
                                   HttpMethod = "Delete"
                               })
                                </th>
                                <th>@item.PassWord</th>
                                <th>@item.HoTen</th>
                                <th>@item.GioiTinh</th>
                                <th>@item.DiaChi</th>
                                <th>@item.DienThoai</th>
                                <th>@item.Email</th>
                                <th>@item.NgayTao</th>
                                <th>@item.TrangThai</th>
                            </tr>
                        }
                    </tbody>
                </table>
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
            </div>
        </div>
    </div>

    @*<input class="txtQuantity" type="text" data-id="@item.Product.MaSach" name="quantity" value="@item.Quantity">*@




</div>
